<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Devices">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ellipse_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"

        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/undraw_playful_cat_re_bxiu_1"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Welcome"

        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/poppins_medium"
        android:text="User name"

        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/user_email"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:text="user email"
        android:textSize="15sp"

        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <TextView
        android:id="@+id/shape_plants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/poppins"
        android:text="Devices"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/shape_plants"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/shape_plants"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/shape_awning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:background="@drawable/shape_devices"
        android:drawableStart="@drawable/awning"

        android:drawablePadding="20sp"
        android:paddingStart="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shape_plants"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/shape_plants"
        app:layout_constraintTop_toTopOf="@+id/shape_plants" />

    <TextView
        android:id="@+id/title_awning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Awning"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/shape_awning"
        app:layout_constraintEnd_toEndOf="@+id/shape_awning"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="@+id/shape_awning"
        app:layout_constraintTop_toTopOf="@+id/shape_awning" />


    <Switch
        android:id="@+id/sw_awning"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/shape_awning"
        app:layout_constraintEnd_toEndOf="@+id/shape_awning"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/shape_awning"
        app:layout_constraintTop_toTopOf="@+id/shape_awning"
        app:layout_constraintVertical_bias="0.478"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/shape_water_pump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_devices"
        android:drawableStart="@drawable/pump"

        android:drawablePadding="20sp"
        android:paddingStart="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shape_plants"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/shape_plants"
        app:layout_constraintTop_toTopOf="@+id/shape_plants" />

    <TextView
        android:id="@+id/title_pump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Water pumps"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/shape_water_pump"
        app:layout_constraintEnd_toEndOf="@+id/shape_water_pump"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="@+id/shape_water_pump"
        app:layout_constraintTop_toTopOf="@+id/shape_water_pump" />

    <Switch
        android:id="@+id/sw_pump"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/shape_water_pump"
        app:layout_constraintEnd_toEndOf="@+id/shape_water_pump"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/shape_water_pump"
        app:layout_constraintTop_toTopOf="@+id/shape_water_pump"
        app:layout_constraintVertical_bias="0.478"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <TextView
        android:id="@+id/shape_fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:background="@drawable/shape_devices"
        android:drawableStart="@drawable/ic_fan"

        android:drawablePadding="20sp"
        android:paddingStart="20sp"
        app:layout_constraintEnd_toEndOf="@+id/shape_plants"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/shape_plants"
        app:layout_constraintTop_toTopOf="@+id/shape_plants" />

    <TextView
        android:id="@+id/title_fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Fan"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/shape_fan"
        app:layout_constraintEnd_toEndOf="@+id/shape_fan"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="@+id/shape_fan"
        app:layout_constraintTop_toTopOf="@+id/shape_fan" />


    <Switch
        android:id="@+id/sw_fan"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/shape_fan"
        app:layout_constraintEnd_toEndOf="@+id/shape_fan"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/shape_fan"
        app:layout_constraintTop_toTopOf="@+id/shape_fan"
        app:layout_constraintVertical_bias="0.478"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <Button
        android:id="@+id/graph"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="12dp"
        android:background="@color/none"
        android:fontFamily="@font/poppins_light"
        android:text="Graph"
        android:textAllCaps="false"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="@+id/plants"
        app:layout_constraintEnd_toEndOf="@+id/shape_plants"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plants" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="@color/none"
        android:fontFamily="@font/poppins_light"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="@+id/shape_plants"
        app:layout_constraintStart_toStartOf="@+id/shape_plants" />

    <Button
        android:id="@+id/plants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="24dp"
        android:background="@color/none"
        android:fontFamily="@font/poppins_light"
        android:text="Plants"
        android:textAllCaps="false"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="@+id/home"
        app:layout_constraintStart_toEndOf="@+id/home" />


</androidx.constraintlayout.widget.ConstraintLayout>